generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  phone     String?
  sexe      String?
  createdAt      DateTime @default(now())
  sessions UserSession[]
  reservation Reservation[]
 // restaurant Restaurant[]
}

model Restaurant {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  address     String
  city        String
  phone       String
  email       String
  description String?
  website     String?
  //ownerId     Int      @unique
  //owner       User     @relation(fields: [ownerId], references: [id])
  reservation Reservation[]
}

model Reservation {
  id          Int      @id @default(autoincrement())
  userId      Int?     @unique
  restaurantId Int ?     @unique
  heure       String
  dateTime    String
  numberPeople   String
  createdAt      DateTime @default(now())
  user        User ?    @relation(fields: [userId], references: [id])
  restaurant  Restaurant? @relation(fields: [restaurantId], references: [id])
}

model UserSession {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  token       String   @unique
  expiresAt   DateTime
  user        User     @relation(fields: [userId], references: [id])
  createdAt      DateTime @default(now())
}

model Newsletter {
  id          Int      @id @default(autoincrement())
  email       String   @unique
}

model Contact {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  phone       String
  message     String 
}

model Owner {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String
  phone       String
  sexe        String
}

  


